.articles
	display: block
	margin-bottom: 50px
	&--wrapper
		display: flex
		flex-flow: row wrap
		margin: 0 -20px
	&__item
		display: flex
		flex-direction: column
		width: calc(25% - 40px)
		min-width: 262px
		margin: 0 20px 40px
	&__img
		max-height: 173px
		overflow: hidden
		margin-bottom: 10px
		& img
			width: 100%
	&__link
		margin-bottom: 10px
		color: #00AFED
		&:hover
			opacity: .8
	&__time
		color: grey_color
	&__btn
		display: flex
		justify-content: flex-end
