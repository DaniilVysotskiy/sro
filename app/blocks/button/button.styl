.button
	display: inline-block
	position: relative
	padding: 9px 13px
	border: 2px solid header_blue_color
	background-color: white
	color: header_blue_color
	font-weight: bold
	white-space: nowrap
	text-decoration: none
	&:hover
		background-color: light_blue_color
		border: 2px solid header_blue_color
		color: header_blue_color
		&::before
			transform: translate(-4px, 4px)
			border-bottom: 2px solid header_blue_color
			border-left: 2px solid header_blue_color
			transition-property: transform
			transition-duration: .3s
			transition-timing-function: ease-in-out
		&::after
			transform: translate(4px, -4px)
			border-top: 2px solid header_blue_color
			border-right: 2px solid header_blue_color
			transition-property: transform
			transition-duration: .3s
			transition-timing-function: ease-in-out
	&:active
		background-color: dark_blue_color
		border: 2px solid dark_blue_color
		color: white
		&::before
			border-bottom: 2px solid dark_blue_color
			border-left: 2px solid dark_blue_color
		&::after
			border-top: 2px solid dark_blue_color
			border-right: 2px solid dark_blue_color
	&::before
	&::after
		content: ''
		position: absolute
		width: 8px
		height: 8px
		transition-property: transform
		transition-duration: .3s
		transition-timing-function: ease-in-out
	&::before
		left: 2px
		bottom: 2px
		transform: translate(0, 0)
		border-bottom: 2px solid header_blue_color
		border-left: 2px solid header_blue_color
	&::after
		top: 2px
		right: 2px
		transform: translate(0, 0)
		border-top: 2px solid header_blue_color
		border-right: 2px solid header_blue_color
	&--contrast
			background-color: header_blue_color
			border: 2px solid header_blue_color
			color: white
			padding: 6px 25px
			max-height: 34px
			&::before
				border-bottom: 2px solid white
				border-left: 2px solid white
			&::after
				border-top: 2px solid white
				border-right: 2px solid white
			&--white-border
				border: 2px solid white
	&--search
		display: inline-block
		position: relative
		padding: 0
		border: none
		background-color: transparent
		color: header_blue_color
		font-weight: bold
		white-space: nowrap
		sprite: $lope
		&::before
		&::after
			content: none
		&:hover,
		&:focus
			background-color: transparent
			border: none
			color: initial
	&--news
		max-width: 145px
	&--large
		width: 210px
		height: 60px
		font-size: 23px
		font-weight: bold