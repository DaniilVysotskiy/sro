.calc
	display: flex
	align-items: center
	flex-flow: row wrap
	padding-left: 15%
	background-image: url('/assets/images/calc_banner.jpg')
	background-repeat: no-repeat
	background-size: cover
	background-position: 100% 0
	width: 100%
	min-height: 200px
	border: 2px solid #CEE8FA
	border-top: none
	&__icon
		display: inline-block
		sprite: $calc
		min-width: 70px
		margin-right: 30px
	& .button
		margin-right: 30px
	&__text
		font-size: 32px
		font-weight: 600
		text-transform: uppercase
		color: header_blue_color
		& > span
			font-size: 22px
			font-weight: 900
	&__form
		& .form
			&__body
				display: flex
				flex-direction: column
				padding: 0 30px
				& > .form__group:last-child
					border-bottom: 0
			&__footer
				background-color: #F6F6F6
				padding: 40px 30px
				& .form__subtitle
					margin-bottom: 30px
			&__group
				flex: 1 0 auto
				display: flex
				flex-direction: column
				margin-top: 30px
				border-bottom: 2px solid #367C94
				&--wrapper
					flex: 1 0 auto
					display: flex
					&:last-child
						& .form__group
							border-bottom: 0
					& .form__group
						flex: 1 0 auto
						&:first-child
							margin-right: 15px
						&:last-child
							margin-left: 15px
			&__subtitle
				font-size: 21px
				font-weight: bold
				color: #367C94
			&__label
				display: flex
				flex-flow: row wrap
				margin: 30px -30px
			&--row
				display: flex
				flex-flow: row wrap
				margin: -10px -20px
			&__inputs
				display: flex
				&--left
					flex-grow: 1
					margin-right: 30px
				&--right
					display: flex
					flex-direction: column
					padding-top: 25px
					flex: 1 1 240px
					& .button
						margin-bottom: 10px
			&__label2
				display: flex
				flex-direction: column
				margin: 10px 20px
				& span
					font-weight: bold
					color: grey_color
					margin-bottom: 10px
				& input
					min-width: 256px
					height: 34px
					padding: 0 10px
					border: 1px solid #D7D9DA
					border-radius: 3px
					&.code
						min-width: auto
			&__agree:checked + .form__checkbox::after
				content: ''
				position: absolute
				top: 10px
				left: 3px
				sprite: $check_grey
			&__checkbox
				display: flex
				align-items: center
				position: relative
				color: #939598
				padding-left: 40px
				padding-top: 3px
				font-size: 12px
				line-height: 1.3
				cursor: pointer
				margin: 20px
				max-width: 420px
			&__checkbox::before
				content: ''
				display: inline-block
				position: absolute
				top: 3px
				left: 0
				width: 26px
				height: 26px
				border: 1px solid grey_border_color
				border-radius: 3px
				background-color: white
				margin-right: 5px