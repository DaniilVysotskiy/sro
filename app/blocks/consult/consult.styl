.consult
	display: flex
	flex-flow: row nowrap
	align-items: stretch
	&__icon
		min-width: 123px
		margin-right: 35px
		sprite: $consult_icon
	&__text
		margin-right: 35px
		font-size: 32px
		font-weight: 600
		color: white
		text-transform: uppercase
		line-height: 1
		& > span
			font-weight: 900
	&__form
		flex-grow: 1
		display: flex
		flex-direction: column
		justify-content: space-between
		margin-top: -20px
		& > div
			flex-grow: 1
			display: flex
			justify-content space-between
			&:last-child
				margin-top: 30px
	&__label
		flex-grow: 1
		display: flex
		flex-direction: column
		color: white
		font-weight: bold
		&:first-child
			margin-right: 15px
		&:last-child
			margin-left: 15px
	&__input
		border: 1px solid #BCE0FA
		border-radius: 3px
		height: 34px
		padding: 0 15px
		margin-top: 10px
		font-weight: normal
	&__agree
		&:checked
			& + .consult__checkbox::after
				content: ''
				position: absolute
				top: 8px
				left: 3px
				sprite: $check
	&__checkbox
		position: relative
		color: white
		padding-left: 40px
		font-size: 12px
		line-height: 1.3
		cursor: pointer
		margin-right: 20px
		max-width: 420px
		&::before
			content: ''
			display: inline-block
			position: absolute
			top: 0
			left: 0
			width: 26px
			height: 26px
			border: 1px solid #BCE0FA
			border-radius: 3px
			background-color: white
			margin-right: 5px
