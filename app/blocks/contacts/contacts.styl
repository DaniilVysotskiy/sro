.contacts
	display: block
	&__info
		display: flex
		flex-flow: row wrap
		margin-x: -15px
	&__item
		width: calc(33.33% - 30px)
		margin: 0 15px 30px
	& .item
		min-width: 300px
		overflow-x: hidden
		text-overflow: ellipsis
		&__title
			padding: 5px 15px
			font-weight: bold
			color: header_blue_color
			text-transform: uppercase
			background-color: #CEE8FA
		&__body
			display: flex
			flex-flow: row nowrap 
			padding: 20px 30px
		&__icon
			margin-right: 30px
			&.phone
				min-width: 40px
				sprite: $tel
			&.email
				min-width: 40px
				sprite: $email
			&.map
				min-width: 31px
				sprite: $map
		&__list
			display: flex
			flex-direction: column
		&__list-item
			display: flex
			flex-direction: column
			line-height: 1.3
			&:not(:first-child)
				margin-top: 25px
		&__text
			color: grey_color
		&__link
			color: header_blue_color
			text-decoration: none
			font-weight: bold
	&__map
	& .map
		&__header
			display: flex
			align-items: center
			height: 40px
			background: linear-gradient(45deg, #18364c 0, #18364c 190px, #367cae 230px, #367cae 100%);
			&--left
				display: flex
				position: relative
				align-items: center
				min-width: 260px
				height: 100%
				padding-left: 30px 
				background-color: brand_blue_color
				font-weight: bold
				& .jsDropdown
					position: relative
					color: white
					text-decoration: none
					&::after
						content: ''
						display: inline-block
						position: relative
						sprite: $arrow_dropdown
						margin-left: 5px
						transform: translateY(-2px)
					&.folded::after
						transform: translateY(-2px) rotate(180deg)
				&::after
					content: ''
					position: absolute
					top: 0
					right: -40px
					width: 0
					height: 0
					border-style: solid
					border-width: 40px 0 0 40px
					border-color: transparent transparent transparent brand_blue_color
		&__icon
			margin-right: 30px
			sprite: $list
		&__list
			display: flex
			flex-flow: row wrap
			width: 100%
			margin: 0 -10px
			padding: 20px 0
			&--wrapper
				display: none
		&__list-item
			width: calc(25% - 20px)
			min-width: 250px
			margin: 20px 10px 20px
		&__link
			display: inline-block
			font-weight: bold
			color: header_blue_color
			text-decoration: none
			margin-bottom: 10px
		&__ymap
			width: 100%
			height: 400px
			background-image: url(/assets/images/ymap.jpg)
	&__form
		position: relative
		width: 100%
		background-color: light_grey_color
		padding-left: 300px
		min-height: 400px
		border-bottom: 2px solid header_blue_color
		& .girl
			position: absolute
			bottom: 0
			left: 50px
		& .form
			padding: 30px 0
			padding-right: 100px
			&__title
				font-size: 28px
				font-weight: 600
				color: header_blue_color
				margin-bottom: 30px
			&__group
				display: flex
				justify-content space-between
				margin-bottom: 30px
			&__group:last-child
				margin-bottom: 0
			&__label
				flex-grow: 1
				display: flex
				flex-direction: column
				color: grey_color
				font-weight: bold
			&__label:first-child
				margin-right: 15px
			&__label:last-child
				margin-left: 15px
				&.zero-gap
					margin-x: 0
			&__input
				border: 1px solid grey_border_color
				border-radius: 3px
				height: 34px
				padding: 0 15px
				margin-top: 10px
				font-weight: normal
			&__textarea
				width: 100%
				border: 1px solid grey_border_color
				border-radius: 3px
				padding: 15px
				margin-top: 10px 
				font-weight: normal
			&__agree:checked + .form__checkbox::after
				content: ''
				position: absolute
				top: 10px
				left: 3px
				sprite: $check_grey
			&__checkbox
				display: flex
				align-items: center
				position: relative
				color: initial
				padding-left: 40px
				padding-top: 3px
				font-size: 12px
				line-height: 1.3
				cursor: pointer
				margin-right: 20px
				max-width: 420px
			&__checkbox::before
				content: ''
				display: inline-block
				position: absolute
				top: 3px
				left: 0
				width: 26px
				height: 26px
				border: 1px solid grey_border_color
				border-radius: 3px
				background-color: white
				margin-right: 5px
	&__details
		padding: 30px
		background-color light_grey_color
		& .details
			&__title
				font-size: 28px
				font-weight: 600
				color: header_blue_color
				margin-bottom: 30px