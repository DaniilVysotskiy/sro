.default-page
	display: block
	&__btns
		display: flex
		justify-content: space-between
		flex-flow: row wrap
		margin-x: -5px
		& > a
			min-width: 300px
			margin: 5px
			& img
				width: 100%
			&:hover
				filter: saturate(1.3)
	&__consult
		background-color: brand_blue_color
		padding: 30px 30px
		& .consult
			flex-flow: row wrap
		& .consult__form
			flex: 1 1 auto
			flex-basis: 100%
			margin-left: 160px
			margin-top: 10px
			& > div
				flex: 1 0 auto
	&--wrapper
		display: flex
	&--left
		flex: 1 0 270px
	&--right
		flex-grow: 1
		padding-left: 30px
	&__content
		border-top: 2px solid light_blue_color2
		padding: 30px 0
		padding-right: 30px
	&__menu
	& .menu
		&__fold
			& + .menu__fold
				margin-top: 2px
			&.build .menu__name
				background-color: #367C94
			&.build .menu__list a
				color: #367C94
			&.build .menu__list
				border: 2px solid #367C94
				&::before
					left: 4px
					bottom: 4px
					transform: translate(0, 0)
					border-bottom: 2px solid #367C94
					border-left: 2px solid #367C94
				&::after
					top: 4px
					right: 4px
					transform: translate(0, 0)
					border-top: 2px solid #367C94
					border-right: 2px solid #367C94
			&.build .menu__item
				&:not(:first-child)
					margin-left: 0
					border-top: 1px solid #367C94
			&.project .menu__name
				background-color: #3662AE
			&.project .menu__list a
				color: #3662AE
			&.project .menu__list
				border: 2px solid #367C94
				&::before
					left: 4px
					bottom: 4px
					transform: translate(0, 0)
					border-bottom: 2px solid #3662AE
					border-left: 2px solid #3662AE
				&::after
					top: 4px
					right: 4px
					transform: translate(0, 0)
					border-top: 2px solid #3662AE
					border-right: 2px solid #3662AE
			&.project .menu__item
				&:not(:first-child)
					margin-left: 0
					border-top: 1px solid #3662AE
			&.research .menu__name
				background-color: #666EC7
			&.research .menu__list a
				color: #666EC7
			&.research .menu__list
				border: 2px solid #666EC7
				&::before
					left: 4px
					bottom: 4px
					transform: translate(0, 0)
					border-bottom: 2px solid #666EC7
					border-left: 2px solid #666EC7
				&::after
					top: 4px
					right: 4px
					transform: translate(0, 0)
					border-top: 2px solid #666EC7
					border-right: 2px solid #666EC7
			&.research .menu__item
				&:not(:first-child)
					margin-left: 0
					border-top: 1px solid #666EC7
			&.active
				& .menu__list
					display: flex
				& .menu__name::before
					transform: translateY(-50%) rotate(0)
		&__name
			display: flex
			flex-direction: column
			justify-content: center
			height: 40px
			position: relative
			cursor: pointer
			color: white
			font-size: 16px
			font-weight: bold
			padding-x: 35px
			user-select: none
			&::before
				content: ''
				display: inline-block
				position: absolute
				top: 50%
				left: 20px
				transform: translateY(-50%) rotate(-90deg)
				sprite: $arrow_dropdown
		&__list
			flex: 1 0 auto
			position: relative
			display: none
			flex-direction: column
			padding: 0 35px
			background-color: white
			&::before
			&::after
				content: ''
				position: absolute
				width: 8px
				height: 8px
				transition-property: transform
				transition-duration: .3s
				transition-timing-function: ease-in-out
		&__item
			text-align: left
			padding-x: 0
			background-color: transparent
		&__link
			font-size: 16px
			font-weight: normal
			white-space: normal
			&:hover
				opacity: .8
	&__extra
		margin-top: 2px
	& .extra
		&__list
			position: relative
			display: flex
			flex-direction: column
			padding: 0 35px
			border: 2px solid light_blue_color2
			&::before
			&::after
				content: ''
				position: absolute
				width: 8px
				height: 8px
				transition-property: transform
				transition-duration: .3s
				transition-timing-function: ease-in-out
			&::before
				left: 4px
				bottom: 4px
				transform: translate(0, 0)
				border-bottom: 2px solid light_blue_color2
				border-left: 2px solid light_blue_color2
			&::after
				top: 4px
				right: 4px
				transform: translate(0, 0)
				border-top: 2px solid light_blue_color2
				border-right: 2px solid light_blue_color2
		&__item
			flex: 1 1 auto
			padding: 25px 0
			padding-left: 50px
			font-weight: 600
			white-space: nowrap
			text-align: center
			border: none
			text-align: left
			&:not(:first-child)
				border-top: 1px solid #CFE9FA
		&__link
			position: relative
			color: header_blue_color
			font-weight: bold
			white-space: nowrap
			text-decoration: none
			&::before
				content: ''
				position: absolute
				top: -10px
				left: -50px
			&.enter::before
				sprite: $door_icon
			&.specialists::before
				top: -3px
				sprite: $specialist_icon
			&.support::before
				top: 0
				sprite: $support_icon
			&.faq::before
				sprite: $faq
			&:hover
				opacity: .8