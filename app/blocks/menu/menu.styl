.menu
	display: block
	background-color: white
	&__list
		display: flex
		flex-flow: row wrap
	&__item
		flex: 1 1 auto
		padding: 15px
		background-color: brand_blue_color
		color: white
		font-weight: 600
		white-space: nowrap
		text-align: center
		border: none
		&:not(:first-child)
			margin-left: 2px
		&.hasDropdown
			position: relative
			&:last-child
				border-right: 2px solid brand_blue_color
				&:hover
					border-right: 2px solid white
			&::after
				content: ''
				position: absolute
				bottom: -12px
				left: 50%
				transform: translateX(-50%)
				sprite: $menu_arrow
			&:hover
				background-color: footer_bg_color
				& > .dropdown
					display: block
				&::after
					content: ''
					position: absolute
					width: 100%
					height: 2px
					bottom: -2px
					left: 0
					background-image: none
					background-color: footer_bg_color
					box-shadow: none
					z-index: 101
					transform: initial
				&::before
					content: ''
					position: absolute
					top: initial
					right: initial
					bottom: -7px
					left: 50%
					transform: translateX(-50%) rotate(180deg)
					sprite: $arrow_dropdown
					z-index: 100
		& .dropdown
			display: none
			position: fixed
			background-color: footer_bg_color
			width: 100vw
			left: 0
			transform: translateY(15px)
			text-align: left
			white-space: initial
			border-top: 2px solid white
			z-index: 99
			&--wrapper
				display: flex
				flex-flow: row wrap
				margin: 30px -20px
			&__item
				&:hover .dropdown__link,
				&:focus .dropdown__link,
				&.active .dropdown__link
					text-decoration: underline
					opacity: 1
				&:not(:first-child)
					margin-top: 20px
			&__link
				color: white
				opacity: .8
				text-decoration: none
				font-weight: normal
				font-size: 13px
		& .group
			max-width: 270px
			margin: 0 20px
	&__link
		color: white
		font-weight: 600
		white-space: nowrap
		text-decoration: none