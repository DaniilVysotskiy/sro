.menu
	display: block
	background-color: white
	&__list
		display: flex
		flex-flow: row wrap
	&__item
		flex: 1 1 auto
		padding: 15px
		background-color: brand_blue_color
		color: white
		font-weight: 600
		white-space: nowrap
		text-align: center
		&:not(:first-child)
			margin-left: 2px
		&.hasDropdown
			position: relative
			&:last-child
				border-right: 2px solid brand_blue_color
				&:hover,
				&:focus
					border-right: 2px solid white
			&:hover,
			&:focus
				background-color: footer_bg_color
				& > .dropdown
					display: block
				&::after
					content: ''
					position: absolute
					width: 100%
					height: 2px
					bottom: -2px
					left: 0
					background-color: footer_bg_color
					box-shadow: none
					z-index: 101
					transform: initial
				&::before
					content: ''
					position: absolute
					bottom: -7px
					left: 50%
					transform: translateX(-50%) rotate(180deg)
					sprite: $arrow_dropdown
					z-index: 100
			&::after
				content: ''
				position: absolute
				bottom: 0
				left: 50%
				transform: translateX(-50%) rotate(45deg) scale(1.2)
				width: 0
				height: 0
				background-color: pink
				box-shadow: 0 0 0 2px brand_blue_color, 0 0 0 4px white, 0 0 0 6px brand_blue_color, 0 0 0 8px white
				z-index: -1
		& .dropdown
			display: none
			position: fixed
			background-color: footer_bg_color
			width: 100vw
			left: 0
			transform: translateY(15px)
			text-align: left
			white-space: initial
			border-top: 2px solid white
			z-index: 99
			&--wrapper
				display: flex
				flex-flow: row wrap
				margin: 30px -20px
			&__item
				&:hover .dropdown__link,
				&:focus .dropdown__link,
				&.active .dropdown__link
					text-decoration: underline
					opacity: 1
				&:not(:first-child)
					margin-top: 20px
			&__link
				color: white
				opacity: .8
				text-decoration: none
				font-weight: normal
				font-size: 13px
		& .group
			max-width: 270px
			margin: 0 20px
	&__link
		color: white
		font-weight: 600
		white-space: nowrap
		text-decoration: none