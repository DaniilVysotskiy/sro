.modals
	& .modal
		display: none
		width: 100%
		height: 100%
		top: 0
		left: 0
		position: fixed
		justify-content: center
		align-items: center
		background-color: rgba(0, 0, 0, .3)
		z-index: 999
		&.active
			display: flex
		&__location
			& .modal__dialog
				width: 430px
				height: 170px
				padding: 30px
				background-color: #F6F6F6
			& .modal__title
				color: header_blue_color
				font-size: 18px
				font-weight: 600
				margin-bottom: 30px
			& .modal__wrapper
				display: flex
			& .modal__form
				display: flex
				flex-direction: column
				& .button
					width: 100px
					margin-right: 30px
			& .modal__text
				margin-bottom: 10px
			& .select2
				flex-grow: 1
				width: 100%
				height: 34px
			& .select2-container--default .select2-selection--single
				border-radius: 3px
			& .select2-container .select2-selection--single
				display: flex
				align-items: center
				height: 100%
			& .select2-container--default .select2-selection--single .select2-selection__arrow
				height: 100%
			& .select2-selection__arrow::before
				content: ''
				position: absolute
				top: 50%
				left: 50%
				transform: translate(-50%, -50%) rotate(180deg)
				sprite: $arrow_select2
			& .select2-container--open .select2-selection__arrow::before
				transform: translate(-50%, -50%) rotate(0)
			& .select2-container--default .select2-selection--single .select2-selection__arrow b
				display: none
		&__call-back
			& .modal__dialog
				position: relative
				width: 768px
				background-color: brand_blue_color
				color: white
				padding: 35px 100px
			& .modal__title
				position: relative
				font-size: 32px
				font-weight: 900
				text-transform: uppercase
				margin-bottom: 20px
				&::before
					content: ''
					position: absolute
					sprite: $call_back_icon
					left: -70px
			& .modal__text
				margin-bottom: 30px
			& .modal__form
				& .modal__wrapper
					display: flex
					justify-content space-between
					margin-bottom: 30px
				& .modal__wrapper:last-child
					margin-bottom: 0
				& .modal__label
					flex-grow: 1
					display: flex
					flex-direction: column
					color: white
					font-weight: bold
				& .modal__label:first-child
					margin-right: 15px
				& .modal__label:last-child
					margin-left: 15px
				& .modal__input
					border: 1px solid #BCE0FA
					border-radius: 3px
					height: 34px
					padding: 0 15px
					margin-top: 10px
					font-weight: normal
				& .modal__textarea
					width: 100%
					border: 1px solid #BCE0FA
					border-radius: 3px
					padding: 15px
				& .modal__agree:checked + .consult__checkbox::after
					content: ''
					position: absolute
					top: 8px
					left: 3px
					sprite: $check
				& .modal__agree:checked + .modal__checkbox::after
					content: ''
					position: absolute
					top: 10px
					left: 3px
					sprite: $check
				& .modal__checkbox
					display: flex
					align-items: center
					position: relative
					color: white
					padding-left: 40px
					font-size: 12px
					line-height: 1.3
					cursor: pointer
					margin-right: 20px
					max-width: 420px
				& .modal__checkbox::before
					content: ''
					display: inline-block
					position: absolute
					top: 3px
					left: 0
					width: 26px
					height: 26px
					border: 1px solid #BCE0FA
					border-radius: 3px
					background-color: white
					margin-right: 5px
			& .close
				position: absolute
				top: 15px
				right: 18px
				sprite: $close
				background-color: transparent
				border: none
body .select2-container--default .select2-results__option--highlighted[aria-selected]
	background-color: #BCE0FA
	color: header_blue_color
body .select2-results__option[aria-selected]
	padding: 10px