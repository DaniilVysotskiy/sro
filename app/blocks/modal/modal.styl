.modal
	display: none
	width: 100%
	height: 100%
	position: fixed
	justify-content: center
	align-items: center
	background-color: rgba(0, 0, 0, .9)
	z-index: 999
	&.active
		display: flex
	&__wrapper
		width: 320px
		height: auto
		background-color: #fff
	&__header
		display: flex
		position: relative
		height: 62px
		justify-content: center
		background-color: #333
		padding: 15px 18px
		& .close
			position: absolute
			top: 15px
			right: 18px
	&__title
		font-size: 24px
		font-weight: bold
		color: #fff
		margin: 0
	&__body
		padding: 25px 30px
