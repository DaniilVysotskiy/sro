.news
	flex-grow: 1
	display: flex
	flex-direction: column
	width: 50%
	&__header
		display: flex
		justify-content center
		align-items: center
		height: 72px
		background-color: brand_blue_color
		& .title
			position: relative
			padding-left: 60px
			color: white
			font-size: 32px
			text-transform: uppercase
			font-weight: 600
			&::before
				content: ''
				position: absolute
				top: -10px
				left: -20px
				sprite: $news
	&__body
		flex-grow: 1
		display: flex
		flex-direction: column
		padding: 30px
		border: 2px solid #CEE8FA
		border-left: 1px solid #CEE8FA
		border-top: 0
		& .item
			display: flex
			flex-direction: column
			font-size: 15px
			padding: 25px 0 
			&:not(:first-child)
				border-top: 1px dotted #D2D3D3 
			&__link
				color: black
				text-decoration: none
				margin-bottom: 20px
				&:hover
					text-decoration: underline
			&__time
				color: #777E7C
	&__row
		display: flex
		flex-flow: row wrap
		margin: 0 -12px
	&__item
		display: flex
		flex-direction: column
		width: calc(33.33% - 24px)
		min-width: 300px
		margin: 12px

