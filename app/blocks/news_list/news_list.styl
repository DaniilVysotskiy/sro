.news_list
	display: block
	&__row
		display: flex
		flex-flow: row nowrap
		&:last-child
			& .item
				border-bottom: 2px solid #CEE8FA
	&__item
		display: flex
		flex-direction: column
		width: calc(33.33% - 24px)
		min-width: 300px
		padding: 12px
		padding-bottom: 20px
		border-top: 2px solid #CEE8FA
		&:first-child
			padding-left: 0
			border-right: 2px solid #CEE8FA
		&:last-child
			padding-right: 0
			border-left: 2px solid #CEE8FA
& .item
	&__img
		max-width: 371px
		margin-bottom: 10px
		& img
			width: 100%
	&__link
		color: #00ABE7
		margin-bottom: 10px
	&__text
		color: grey_color