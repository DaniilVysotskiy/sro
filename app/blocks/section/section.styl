.section
	display: block
	position: relative
	&--header
		display: flex
		justify-content: space-between
	&.carousel
		background-color: #E5E6E8
	&.hero
		background-color: brand_blue_color
		margin-top: -2px
		padding-bottom: 50px
		z-index: 1
	&.default
		margin-top: 50px
	&.mb50px
		margin-bottom: 50px
	&.s-consult
		background-color: brand_blue_color
		min-height: 200px
		padding: 20px 0
		display: flex
		align-items: center
	&.blue
		background-color: light_blue_color2
		min-height: 300px
		padding: 20px 0
		display: flex
		align-items: center
	&.s-comments
		background-color: #F6F6F6
		padding: 50px 0
	&.styled-header
		& .header
			display: flex
			min-height: 65px
			background-color brand_blue_color
			margin-bottom: 40px
			& .shadow
				width: 100%
				height: 100%
				&.interesting
					background: linear-gradient(45deg, #306997 0, #306997 250px, brand_blue_color 280px, brand_blue_color 100%);
				&.popular
					background: linear-gradient(45deg, #306997 0, #306997 250px, brand_blue_color 280px, brand_blue_color 100%);
	&__title
		font-size: 32px
		font-weight: 600
		text-transform: uppercase
		color: header_blue_color
		margin-bottom: 30px
		& > span
			font-weight: 900
	&__header
		display: block
		position: absolute
		width: 100%
		height: 72px
		top: 0
		left: 0
		background-color: brand_blue_color
		z-index: -1
	& .double
		display: flex
		flex-flow: row wrap