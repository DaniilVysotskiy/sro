.services
	flex-grow: 1
	display: flex
	flex-direction: column
	width: 50%
	&__header
		display: flex
		justify-content center
		align-items: center
		height: 72px
		background-color: brand_blue_color
		& .title
			position: relative
			padding-left: 60px
			color: white
			font-size: 32px
			text-transform: uppercase
			font-weight: 600
			&::before
				content: ''
				position: absolute
				top: -10px
				left: -20px
				sprite: $services
	&__body
		flex-grow: 1
		display: flex
		flex-flow: row wrap
		padding: 30px
		border: 2px solid #CEE8FA
		border-right: 1px solid #CEE8FA
		border-top: 0
		& .item
			display: flex
			flex-direction: column
			position: relative
			width: 125px
			text-decoration: none
			color: black
			font-weight: bold
			text-align: center
			margin: 40px 20px
			&::before
				content: ''
				position: relative
				margin: 0 auto
				margin-bottom: 20px
			&.iso::before
				sprite: $iso
			&.mchs::before
				sprite: $mchs
			&.qualification::before
				sprite: $qualification
			&.certificate::before
				sprite: $certificate
			&.register::before
				sprite: $register
			&.guarantee::before
				sprite: $guarantee
