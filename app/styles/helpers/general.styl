.bold
	font-weight: bold
.seporator
	margin 0 .8em
	font-weight: bold
.calc-icon
	display: inline-block
	vertical-align: bottom
	margin-right: 5px
	sprite: $calc_icon
.title
	&--h2
		color: header_blue_color
		font-size: 28px
		font-weight: 600
		margin-bottom: 30px
	&--comments
		position: relative
		padding-left: 100px
		&::before
			content: ''
			position: absolute
			top: -50%
			left: 0
			display: inline-block
			vertical-align: middle
			sprite: $comments
	&--label
		display: flex
		justify-content: flex-end
		align-items: center
		color: white
		text-transform: uppercase
		font-size: 18px
		font-weight: 900
		min-width: 100vw
		height: calc(100% + 7px)
		position: absolute
		background-color brand_blue_color
		left: calc(-100vw + 338px)
		padding-right: 85px
		&::after
			content: '';
			position: absolute;
			top: 0;
			right: -72px;
			width: 0;
			height: 0;
			border-style: solid;
			border-width: 72px 0 0 72px;
			border-color: transparent transparent transparent brand_blue_color;
		&.interesting
			& .icon
				sprite: $interesting
				margin-right: 15px

p
	margin-bottom: 10px
	line-height: 1.5
	&:last-child
		margin-bottom: 0
strong
	font-weight: bold