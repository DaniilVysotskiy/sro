@media (max-width: 1170px)
	.header__top .location
		height: 100%
	.header__top .location::after
		content: none
	.header__top--wrapper
		height: auto
		background: header_blue_color

@media (max-width: 1140px)
	.menu__list
		flex-direction: column
	.menu__item
		margin-bottom: 2px
		&:not(:first-child)
			margin-left: 0
		&:last-child
			margin-bottom: 0
	.menu__item.hasDropdown
		&:hover,
		&:focus
			border-left: 2px solid white
			border-right: 2px solid white
	.menu__item.hasDropdown::after
		content: none
	.menu__item .dropdown
		position: absolute
		width: calc(100% + 4px)
		left: -2px
		border-left: 2px solid white
		border-right: 2px solid white
		border-bottom: 2px solid white
		
@media (max-width: 1085px)
	.footer__bottom--right
		background: brand_blue_color
	.footer__bottom--left::after
		content: none


@media (max-width: 1000px)
	.header__top--wrapper
		height: auto

@media (max-width: 900px)
	.seporator
		display: none
	.footer__bottom--right
		justify-content: flex-start
		margin-top: 10px
		margin-bottom: 10px

@media (max-width: 700px)
	.header__middle
		padding: 10px 0
	.header__middle--wrapper
		flex-direction: column
		justify-content: center
		padding: 0
	.logo
		margin: 10px 20px
	.header__middle--wrapper .group
		justify-content: center
		margin: 0 auto
	.header__search .search .button--contrast
		display: none

@media (max-width: 600px)
	.container
		padding: 0 10px;
	.header__top--wrapper
		flex-direction: column
	.header__top .location
		position: relative
		justify-content: center
		width: calc(100% + 40px)
		left: 0
	.header__top .nav
		flex-direction: column
		margin-left: 0
	.header__top .nav__link
		text-align: center
	.header__top .nav__item:not(:first-child)
		margin-left: 0
	.header__search .search
		width: 100%
	.footer__bottom--wrapper
		padding: 20px 10px
		text-align: center
	.footer__bottom--left
		width: 100%
		flex-direction: column
	.footer__bottom--right
		justify-content: center

@media (max-width: 400px)
	.header__search .search__label
		margin: 20px 0 0
	.header__search .search
		flex-direction: column
		justify-content: center